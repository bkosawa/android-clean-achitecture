<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/keyline_2">

    <ImageView
        android:id="@+id/itemPic"
        android:layout_width="@dimen/item_list_size"
        android:layout_height="@dimen/item_list_size"
        android:src="@drawable/illus_chocolate_cake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemTitle"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/keyline_2"
        android:text="Amazing Cake"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toTopOf="@+id/itemSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemPic" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemSubtitle"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_1"
        android:paddingStart="@dimen/keyline_2"
        android:text="â‚¬15,00"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemPic" />

</androidx.constraintlayout.widget.ConstraintLayout>